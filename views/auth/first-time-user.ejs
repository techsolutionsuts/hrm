<%- include('../includes/header.ejs') %>
    <link href="/css/employee-style.css" rel="stylesheet">


    <div class="container-fluid mainPage">

        <div class="hiden">
            <%- include('../includes/loader.ejs') %>
        </div>
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color:#008a9f;">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: white;">Create New Password</h5>
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="tab-pane active" id="basic_info">
                    <div class="panel panel-default">
                        <div class="panel-heading" style="font-size: 15px;"><i class="fas fa-plus"></i> Create Password</div>
                        <div class="panel-body">

                            <form action="/createpassword" id="createpassword" method="POST" enctype="multipart/form-data">

                                <div class="modal-body">
                                    <input type="hidden" required name="_csrf" value="<%= csrfToken %>">
                                    <div class="form-group">
                                        <label> Full name </label>
                                        <input readonly type="text" required name="crfullname" class="form-control" placeholder="Enter full name" id="crfullname" value="<%= userData.name %>">
                                        <span id="error_crfullname" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Email (user name)</label>
                                        <input readonly type="email" required name="cremail" class="form-control" placeholder="Enter Email" id="cremail" value="<%= userData.email %>">
                                        <span id="error_cremail" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" required name="crpassword" class="form-control" placeholder="Enter Password" id="crpassword">
                                        <span id="error_crpassword" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>Confirm Password</label>
                                        <input type="password" required name="crconpassword" class="form-control" placeholder="Confirm Password" id="crconpassword">
                                        <span id="error_crconpassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <input type="hidden" name="user_id" value="<%= userData.userId %>">
                                <span id="error_user_id" class="text-danger"></span>


                                <div class="user-message user-message--error" style="display: none; width: inherit;"></div>

                                <div class="modal-footer">
                                    <button type="submit" name="registerbtn" class="btn btn-primary">Create</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


    <%- include('../includes/scripts.ejs') %>
        <%- include('../includes/footer.ejs') %>