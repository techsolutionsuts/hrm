<%- include('../includes/header.ejs') %>
    <link href="/css/employee-style.css" rel="stylesheet">


    <div class="container-fluid mainPage">

        <div class="hiden">
            <%- include('../includes/loader.ejs') %>
        </div>
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color:#008a9f;">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: white;">I Forgot My Password</h5>
                    <span aria-hidden="true"></span>
                    <!-- &times; -->
                    </button>
                </div>
                <div class="tab-pane active" id="basic_info">
                    <div class="panel panel-default">
                        <div class="panel-heading" style="font-size: 15px;"><i class="fas edit"></i> Request Password Reset</div>
                        <div class="panel-body">

                            <form action="/forgotpassword" id="resetpassword" method="POST" enctype="multipart/form-data">

                                <div class="modal-body">
                                    <input type="hidden" required name="_csrf" value="<%= csrfToken %>">

                                    <div class="form-group">
                                        <label>Email (user name)</label>
                                        <input type="email" required name="forgemail" class="form-control" placeholder="Enter your email or username" id="cremail" value="">
                                        <span id="error_forgemail" class="text-danger"></span>

                                    </div>

                                </div>

                                <div class="user-message user-message--error" style="display: none; width: inherit;"></div>

                                <label style="color: #8B008B;">Kindly note that, the administrator upon receiving your request will reset your password and informed you accordingly.</label>
                                <div class="modal-footer">
                                    <a href="/login">Login instaed?</a>
                                    <button type="submit" name="" class="btn btn-primary">Request</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


    <%- include('../includes/scripts.ejs') %>
        <%- include('../includes/footer.ejs') %>