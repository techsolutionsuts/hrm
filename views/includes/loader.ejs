<style media="screen">
  .loader {
    position: fixed;
    z-index: 99;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #DCDCDC;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .loader>img {
    width: 60%;
    /* height: 90%; */
  }

  .loader.hidden {
    animation: fadeOut 10s;
    animation-fill-mode: forwards;
    /* display: none; */
  }

  .dis {
    display: none;
  }

  @keyframes fadeOut {
    100% {
      opacity: 0;
      visibility: 0;
    }
  }
/* Loading 2 */
  .modal-busy {
            position: fixed;
            z-index: 999;
            height: 100%;
            width: 100%;
            top: 0;
            left: 0;
            background-color: Black;
            filter: alpha(opacity=60);
            opacity: 0.6;
            -moz-opacity: 0.8;
        }
        .center-busy {
            z-index: 1000;
            margin: 300px auto;
            padding: 0px;
            width: 130px;
            filter: alpha(opacity=100);
            opacity: 1;
            -moz-opacity: 1;
        }
        .center-busy img {
            height: 128px;
            width: 128px;
        }
        .mainPae{
          background-image: url('/img/loader2.gif');
        }
</style>
<div class="loader">
  <img src="/img/loader.gif" alt="Loading ........">

</div>

<div class="modal-busy" id="loader" style="display: none;">     
  <div class="center-busy" id="test-git">
    <img alt="Loading ........" id="stop_loading" src="/img/loader2.gif"/>
  </div>
</div>


<script type="text/javascript">
  window.addEventListener('load', function () {
    const loader = document.querySelector(".loader");
    loader.className += " hidden";
    setTimeout(function () {
      loader.className += " dis";
    }, 1000);

  });
</script>