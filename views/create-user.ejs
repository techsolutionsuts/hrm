<%- include('./includes/header.ejs') %>
    <link href="/css/employee-style.css" rel="stylesheet">


    <div class="container-fluid mainPage">

        <div class="hiden">
            <%- include('./includes/loader.ejs') %>
        </div>
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color:#008a9f;">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: white;">Add System user with to continue</h5>
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="tab-pane active" id="basic_info">
                    <div class="panel panel-default">
                        <div class="panel-heading" style="font-size: 15px;"><i class="fas fa-plus"></i> Create user</div>
                        <div class="panel-body">

                            <form action="createUser" id="createUser" method="POST" enctype="multipart/form-data">

                                <div class="modal-body">
                                    <input type="hidden" required name="_csrf" value="<%= csrfToken %>">
                                    <div class="form-group">
                                        <label> Full name </label>
                                        <input type="text" required name="fullname" class="form-control" placeholder="Enter full name" id="fullname">
                                        <span id="error_fullname" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Email (user name)</label>
                                        <input type="email" required name="nuseremail" class="form-control" placeholder="Enter Email" id="nuseremail">
                                        <span id="error_nuseremail" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" required name="nuserpassword" class="form-control" placeholder="Enter Password" id="nuserpassword">
                                        <span id="error_nuserpassword" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>Confirm Password</label>
                                        <input type="password" required name="ncuserpassword" class="form-control" placeholder="Confirm Password" id="ncuserpassword">
                                        <span id="error_ncuserpassword" class="text-danger"></span>
                                    </div>

                                    <!-- <div class="form-group">
                                        <label style="color: blueviolet;">License Code</label>
                                        <textarea type="text" required name="licensecode" class="form-control" placeholder="Copy paste the license code here, if it's not showing." id="licensecode" style="border-color: blueviolet;" <% if(csrfToken) { %> readonly <% } else { %> <% } %>><%= csrfToken %></textarea>
                                        <span id="error_licensecode" class="text-danger"></span>
                                    </div> -->

                                </div>
                                <div class="user-message user-message--error" style="display: none; width: inherit;"></div>

                                <div class="modal-footer">
                                    <button type="submit" name="registerbtn" class="btn btn-primary">Continue</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


    <%- include('./includes/scripts.ejs') %>
        <%- include('./includes/footer.ejs') %>