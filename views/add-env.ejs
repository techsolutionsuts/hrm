<%- include('./includes/header.ejs') %>
    <link href="/css/employee-style.css" rel="stylesheet">


    <div class="container-fluid mainPage">

        <div class="hiden">
            <%- include('./includes/loader.ejs') %>
        </div>
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background-color:#008a9f;">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: white;">Add new ENV</h5>
                    <span aria-hidden="true"></span>
                    <!-- &times; -->
                    </button>
                </div>
                <div class="tab-pane active" id="basic_info">
                    <div class="panel panel-default">
                        <div class="panel-heading" style="font-size: 15px; color: green;"><i class="fas edit"></i> <%= done %></div>
                        <div class="panel-body">

                            <form action="/addEnv" id="" method="POST" enctype="multipart/form-data">

                                <div class="modal-body">
                                    <input type="hidden" required name="_csrf" value="<%= csrfToken %>">

                                    <div class="form-group">
                                        <label>Key</label>
                                        <input type="text" required name="key" class="form-control" placeholder="Enter key" id="" value="">
                                        <span id="" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label>Value</label>
                                        <input type="text" required name="value" class="form-control" placeholder="Enter value" id="" value="">
                                        <span id="" class="text-danger"></span>

                                    </div>

                                </div>

                                <div class="user-message user-message--error" style="display: none; width: inherit;"></div>

                                <label style="color: #8B008B;">Key must be all CAPs and no space or dash, except underscore</label>
                                <div class="modal-footer">
                                    <button type="submit" name="" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


    <%- include('./includes/scripts.ejs') %>
        <%- include('./includes/footer.ejs') %>